mixin dropdownCategory(list)
    .dropdown_box
        .target 선택하세요
        .icon &#5167;
    ul.dropdown_category(style="display:none;")
        each item in list
            li.dropdown_item= item

-const categories = ['생활', '식비', '교통', '쇼핑/뷰티', '의료/건강', '문화/여가', '미분류']
form(action="/history", method="POST")
    input(type="hidden" name="year" value=year)
    input(type="hidden" name="month" value=month_num)
    .input_bar 
        .input_box.date
            -var curDate = new Date();
            -var date = `${curDate.getFullYear()}${curDate.getMonth().toString().padStart(2,0)}${curDate.getDay().toString().padStart(2,0)}`
            label.input_date_text 일자
            input(type="date", name="date", id="date", placeholder="입력하세요", value=date)
        .input_box.category
            label.input_category_text 분류
            input(type="hidden", name="category", id="category", value='미분류')
            +dropdownCategory(categories)
        .input_box.memo
            label.input_memo_text 내용
            input(type="text", name="memo", id="memo", placeholder="입력하세요")
        .input_box.payment
            -var payments = ['선택하세요']
            label.input_payment_text 결제수단
            select(name="payment", placeholder="선택하세요")
                each index in payments 
                    option(value=index)= index
        .input_box.price
            label.input_price_text 금액
            input(type="text", name="price", id="price", placeholder="입력하세요")
        button.input_box.save_btn(type="submit")
            img(src="images/save_btn.png")